{
  "compilerOptions": {
    "target": "ES2020",                     // modern JS target
    "module": "commonjs",                   // Node uses commonjs
    "rootDir": "src",                       // source folder
    "outDir": "./dist",                       // compiled output folder
    "strict": true,                         // enable strict type checking
    "esModuleInterop": true,                // allows default import syntax
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
